/* based on Fedora's p7zip.spec */
/* TODO: support for non-x86_64, see fedora spec */
{
    "name": "p7zip",
    "buildsystem": "simple",
    "build-commands": [
        "cd CPP/7zip/CMAKE/ && sh ./generate.sh",
        "cp -f makefile.linux_amd64_asm makefile.machine",
        "make 7z",
        "make install DEST_HOME=/app"
    ],
    "sources": [
        {
            "type": "archive",
            "url": "https://sourceforge.net/projects/p7zip/files/p7zip/16.02/p7zip_16.02_src_all.tar.bz2",
            "sha256": "5eb20ac0e2944f6cb9c2d51dd6c4518941c185347d4089ea89087ffdd6e2341f"
        }
    ]
}
