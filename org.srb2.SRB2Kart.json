{
    "app-id": "org.srb2.SRB2Kart",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "srb2kart",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=pulseaudio"
    ],
    "modules": [
        "yasm.json",
        "p7zip.json",
        {
            "name": "game-music-emu",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/mpyne/game-music-emu/downloads/game-music-emu-0.6.3.tar.xz",
                    "sha256": "aba34e53ef0ec6a34b58b84e28bf8cfbccee6585cebca25333604c35db3e051d"
                }
            ]
        },
        {
            "name": "srb2kart-assests",
            "buildsystem": "simple",
            "build-commands": [
                "7z x srb2kart-v12-Installer.exe",
                "mkdir -p /app/usr/share/games/SRB2Kart",
                "install -Dm644 {music,textures,gfx,maps,sounds,chars,bonuschars}.kart srb2.srb /app/usr/share/games/SRB2Kart",
                /* support for patching, not needed for v1.2 */
                "# unzip -o srb2kart-v12-Patch.zip",
                "# install -Dm664 patch.kart /app/usr/share/games/SRB2Kart",
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://github.com/STJr/Kart-Public/releases/download/v1.2/srb2kart-v12-Installer.exe",
                    "sha256": "57284de43a2889c0a60ce8fee77df22095fcd31beef6130cbeed1ead0bebbfec"
                }
            ]
        },
        {
            "name": "srb2kart",
            "buildsystem": "simple",
            "build-commands": [
                "ls",
                "#mkdir build",
                "#cd build; cmake .. -DCMAKE_BUILD_TYPE=Release",
                "cd src; make -j$FLATPAK_BUILDER_N_JOBS NPUPX=1 LINUX64=1",
                "install -Dm755 bin/Linux64/Release/lsdl2srb2kart /app/bin/srb2kart",
                "install -Dm644 src/sdl/SDL_icon.xpm /app/usr/share/pixmaps/srb2kart.xpm"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/STJr/Kart-Public/archive/v1.2.zip",
                    "sha256": "3016627dab91590dea7075d9794de87412db5c9e9de2abb6c1dd943eca1bef5c"
                }
            ]
        }
    ]
}
